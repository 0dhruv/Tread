# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stock_trading
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=False

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Configuration (Choose one or multiple)
# Google Gemini (Free tier: 60 requests/minute)
GOOGLE_API_KEY=your-google-gemini-api-key

# OpenAI (Optional - requires paid account)
# OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude (Optional - requires paid account)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Data Collection Settings
MARKET_DATA_UPDATE_INTERVAL=300  # seconds (5 minutes)
HISTORICAL_DATA_DAYS=365
MAX_CONCURRENT_DOWNLOADS=10

# Application Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
LOG_LEVEL=INFO
TIMEZONE=Asia/Kolkata

# Paper Trading Settings
INITIAL_PORTFOLIO_VALUE=1000000  # 10 Lakhs in INR
MAX_POSITION_SIZE=0.2  # 20% of portfolio per stock
TRANSACTION_FEE_PERCENT=0.0005  # 0.05% transaction fee
